# Know your container and login to it with root privilegies (to install "commands")
docker ps -a
gracious_newton
docker exec -it --user=root <container name> /bin/sh
docker exec -it --user=root gracious_newton /bin/sh
cat /etc/os-release # Get container's OS version

# Attack to the docker node protected resource
curl http://127.0.0.1:80/etc/passwd # this one works (path traversal)

curl "http://127.0.0.1:80/?id=1' UNION SELECT" # not working in some shells
curl "http://127.0.0.1:80/?id=1%27%20UNION%20SELECT" # this one works (SQLi)

# Multiple legitimate requests

for (( i=0 ; $i<10 ; i++ )) ;
do 
   curl http://127.0.0.1:80 ;
done

nginx -s reload # restart NGINX within container to apply configuration changes
